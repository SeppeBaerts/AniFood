<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="this"
    x:Class="AniFoodNew.Controls.NameValuePairView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid BindingContext="{x:Reference this}" ColumnDefinitions="*,*">
        <Label Style="{DynamicResource LabelPrimary}" Text="{Binding Name}" />
        <Label
            Grid.Column="1"
            Style="{DynamicResource LabelPrimary}"
            Text="{Binding Value}" />
    </Grid>
</ContentView>
